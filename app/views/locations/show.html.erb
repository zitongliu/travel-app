<div class="parallax-container">
  <div class="parallax">
    <%= image_tag @location.image2 %>
  </div>

  <div class="row">
    <div class="col s1">

    </div>
    <div class="parallaxLeft col s6">
      <h1><%= @location.name %></h1>
      <h3><%= @location.country %></h2>
      <p><%= @location.description %></p>
    </div>
    <div class="col s5">

    </div>

    </div>
  </div>

</div>


<div class="container">
  <h2 style="text-align: center;">Achievements</h2>
  <div class="pageActionButtons">
    <% if @current_user.present? %>
      <%= link_to( "Create achievement", new_achievement_path, class: "waves-effect waves-light btn-large" ) %>
    <% else %>
      <a href="/login" class="waves-effect waves-light btn-large">Sign in to post</a>
    <% end %>
  </div>

  <div class="row">
    <% @location.achievements.each do |achievement| %>
        <div class="col s12 m4">
          <div class="card">
            <div class="card-image">
              <%= cl_image_tag(achievement.image) %>
            </div>
            <div class="card-content">
              <h5><%= link_to(achievement.title, achievement)%></h5>
            </div>
            <div class="card-action">
              <a href="/achievements/<%= achievement.id %>">Details</a>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>
